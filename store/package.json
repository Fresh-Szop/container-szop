{
  "name": "backend",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "rimraf dist && tsc && tsc-alias",
    "prod": "cross-env NODE_ENV=production node dist/src/index.js",
    "db:push": "npx drizzle-kit push --config drizzle.config.ts --force",
    "db:seed": "tsx db.seed.ts",
    "db:prepare": "npm run db:push && npm run db:seed"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.4",
    "@hono/oauth-providers": "^0.6.2",
    "@hono/zod-validator": "^0.4.1",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.39.3",
    "googleapis": "^144.0.0",
    "hono": "^4.6.8",
    "mysql2": "^3.12.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/seedrandom": "^3.0.8",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.27.1",
    "rimraf": "^6.0.1",
    "seedrandom": "^3.0.5",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.7.1",
    "typescript": "^5.7.3"
  }
}
